brew "postgresql"
brew "redis"
brew "imagemagick"
brew "watch"
brew "z"
brew "ssh-copy-id"
tap "heroku/brew"
brew "heroku"
brew "tmux"

# Essential Mac applications
tap "caskroom/cask"
tap "caskroom/versions"

cask "java"
cask "skype"
cask "iterm2"
cask "the-unarchiver"
cask "google-chrome"
cask "sublime-text"
cask "slack"
cask "spectacle"

# Node version manager
brew "nvm"

# Yarn package manager
brew "yarn"

# Ruby
brew "rbenv"
brew "ruby-build"
brew "rbenv-default-gems"
