#!/usr/bin/env bash

set -e

OSX_BOOTSTRAP=${OSX_BOOTSTRAP:-"$HOME/.osx-bootstrap"}

if [ ! -d "$OSX_BOOTSTRAP" ]
then
  git clone -b master https://github.com/fs/osx-bootstrap.git "$OSX_BOOTSTRAP"
fi

modules=(
  osx_version
  osx_update
  projectdir
  ssh
  brew
  ruby
  node
  osx_defaults
  osx_security
  dotfiles
  sublime_bootstrap
  osx_start
)

for module in "${modules[@]}"
do
  bash "$OSX_BOOTSTRAP/modules/$module.bash"
done

